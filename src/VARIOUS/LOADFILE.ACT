;M=4 LOAD, M=8 SAVE
PROC DOS(CARD FILE,ADDR,NBYTES,BYTE M)
  CLOSE(2) OPEN(2,FILE,M,128)
  IF M=4 THEN POKE($362,7)
  ELSE POKE($362,11) FI
  POKEC($364,ADDR) POKEC($368,NBYTES)
  [$A2$20$20$56$E4$85$A3] CLOSE(2)
RETURN

PROC MAIN()
  CHAR ARRAY FNAME(0)="H1:FOO.FNT"

  DOS(FNAME,$4000,$96E,4)
RETURN
