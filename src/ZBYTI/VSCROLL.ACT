SET $495=8 SET $E=$2000 SET $491=$2000

BYTE ARRAY
  DL=[$70$70$70$70$67$D$20$41$1$20],
  TEXT="NNtejemnice@atariNNN"

BYTE
  RTCLOCK=$14,CH=$2FC,VSCROL=$D405

CARD
  SDLSTL=$230

PROC WAIT(BYTE FRAMES)
  FRAMES==+RTCLOCK
  WHILE FRAMES#RTCLOCK DO OD
RETURN

PROC MAIN()
  BYTE I=$CA

  I=$F SDLSTL=DL
  WHILE CH=$FF DO
    WHILE I DO
      I==-1 VSCROL=I
      WAIT(3)
    OD
    WAIT(50)
    WHILE I<$F DO
      I==+1 VSCROL=I
      WAIT(2)
    OD
  OD
  GRAPHICS(0)
RETURN
