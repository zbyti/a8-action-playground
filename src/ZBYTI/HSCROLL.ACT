SET $495=8 SET $E=$2000 SET $491=$2000

BYTE ARRAY
  DL=[$70$70$70$56$C$20$41$1$20],
  TEXT="NNNNNNNNNNNNNNNNNNNNtajemnice@atariNNNNNNNNNNNNNNNNNNNN"

BYTE
  RTCLOCK=$14,
  HSCROL=$D404
CARD SDLSTL=$230

PROC WAIT(BYTE FRAMES)
  FRAMES==+RTCLOCK
  WHILE FRAMES#RTCLOCK DO OD
RETURN

PROC MAIN()
  BYTE I=$CA

  SDLSTL=DL

  DO
    I=8
    WHILE I DO
      I==-1 HSCROL=I
      WAIT(1)
    OD
    DL(4)==+1
    IF DL(4)=$23+$C THEN DL(4)=$C FI
  OD
RETURN
